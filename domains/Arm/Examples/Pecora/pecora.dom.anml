type Object with{
    variable Loc at;
};
type Loc with {
    predicate empty();
};
type Location < Loc ;
type Arm < Loc;
constant Location atRight(Location l);

action place (Object o, Location l, Arm a){
	duration := 5;
	[all] {
		a.empty == false :-> true;
        o.at == a :-> l;
		l.empty == true :-> false;
	};
};

action pick (Object o, Location l, Arm a){
	duration := 5;
	[all] {
		l.empty == false :-> true;
		o.at == l :-> a;
		a.empty == true :-> false;
	};
};


